{
  "name": "@tuyau/utils",
  "type": "module",
  "version": "0.0.2",
  "description": "Utilities for Tuyau",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "ISC",
  "keywords": [],
  "exports": {
    "./types": "./build/types.js"
  },
  "main": "index.js",
  "files": [
    "build"
  ],
  "scripts": {
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "build": "tsup-node",
    "checks": "pnpm lint && pnpm typecheck",
    "test": "c8 node --loader ts-node/esm bin/test.ts"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "tsup": {
    "entry": [
      "./src/types.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  }
}
