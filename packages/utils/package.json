{
  "name": "@tuyau/utils",
  "type": "module",
  "version": "0.0.1",
  "description": "Utilities for Tuyau",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "ISC",
  "keywords": [],
  "exports": {
    "./types": "./build/types.js"
  },
  "main": "index.js",
  "files": [
    "build"
  ],
  "scripts": {
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "release": "pnpm build && pnpm release-it",
    "build": "tsup-node",
    "checks": "pnpm lint && pnpm typecheck"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "tsup": {
    "entry": [
      "./src/types.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): @tuyau/utils@${version}",
      "tagAnnotation": "release ${version}",
      "tagName": "@tuyau/utils@${version}"
    },
    "github": {
      "release": true,
      "releaseName": "@tuyau/utils@${version}",
      "web": true
    }
  }
}
