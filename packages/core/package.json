{
  "name": "@tuyau/core",
  "type": "module",
  "version": "0.1.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "keywords": [],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./commands": "./build/commands/main.js",
    "./tuyau_provider": "./build/providers/tuyau_provider.js"
  },
  "files": [
    "build"
  ],
  "engines": {
    "node": ">=20.6.0"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles --up 1 \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "test": "c8 npm run quick:test",
    "index:commands": "adonis-kit index build/commands",
    "prebuild": "npm run clean",
    "build": "pnpm clean && tsup-node && pnpm copy:templates && pnpm index:commands",
    "version": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0"
  },
  "dependencies": {
    "ts-morph": "^22.0.0"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.5.1",
    "@adonisjs/core": "^6.8.0",
    "@julr/tooling-configs": "^2.2.0",
    "@poppinss/cliui": "^6.4.1",
    "@poppinss/matchit": "^3.1.2",
    "@tuyau/client": "workspace:*",
    "@tuyau/utils": "workspace:*",
    "@types/node": "^20.12.7"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/types.ts",
      "./commands/generate.ts",
      "./providers/tuyau_provider.ts"
    ],
    "outDir": "./build",
    "clean": false,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  }
}
