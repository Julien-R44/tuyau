{
  "name": "@tuyau/client",
  "type": "module",
  "version": "0.0.11",
  "description": "e2e client for AdonisJS",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "ISC",
  "keywords": [],
  "exports": {
    ".": "./build/index.js"
  },
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "scripts": {
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "build": "tsup-node",
    "test": "c8 node --loader ts-node/esm bin/test.ts",
    "quick:test": "node --loader ts-node/esm bin/test.ts",
    "checks": "pnpm lint && pnpm typecheck"
  },
  "dependencies": {
    "ky": "^1.2.4",
    "object-to-formdata": "^4.5.1"
  },
  "devDependencies": {
    "@adonisjs/core": "^6.8.0",
    "@tuyau/utils": "workspace:*",
    "@vinejs/vine": "^2.0.0"
  },
  "tsup": {
    "entry": [
      "./index.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  }
}
