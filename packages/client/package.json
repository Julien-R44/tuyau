{
  "name": "@tuyau/client",
  "description": "e2e client for AdonisJS",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": "./build/index.js"
  },
  "scripts": {
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "release": "pnpm build && pnpm release-it",
    "build": "tsup-node",
    "checks": "pnpm lint && pnpm typecheck"
  },
  "dependencies": {
    "@poppinss/matchit": "^3.1.2",
    "ky": "^1.2.3",
    "@tuyau/utils": "workspace:*"
  },
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "ISC",
  "keywords": [],
  "tsup": {
    "entry": [
      "./index.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): @tuyau/client@${version}",
      "tagAnnotation": "release ${version}",
      "tagName": "@tuyau/client@${version}"
    },
    "github": {
      "release": true,
      "releaseName": "@tuyau/client@${version}",
      "web": true
    }
  }
}
