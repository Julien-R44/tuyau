{
  "name": "@tuyau/inertia",
  "type": "module",
  "version": "0.0.4",
  "description": "",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "ISC",
  "keywords": [],
  "exports": {
    ".": "./build/index.js",
    "./react": "./build/react/index.js",
    "./vue": "./build/vue/index.js",
    "./types": "./build/types.js"
  },
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "build": "tsup-node",
    "test": "c8 npm run quick:test",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "checks": "pnpm lint && pnpm typecheck"
  },
  "peerDependencies": {
    "@inertiajs/react": "^1.0.16",
    "@inertiajs/vue3": "^1.0.16",
    "@tuyau/client": "workspace:*",
    "react": "^18.3.1",
    "vue": "^3.4.27"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "@inertiajs/react": {
      "optional": true
    },
    "@inertiajs/vue3": {
      "optional": true
    }
  },
  "devDependencies": {
    "@inertiajs/react": "^1.2.0",
    "@inertiajs/vue3": "^1.2.0",
    "@tuyau/client": "workspace:*",
    "@types/react": "^18.3.1",
    "react": "^18.3.1",
    "solid-js": "^1.9.2",
    "vue": "^3.5.12"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "tsup": {
    "entry": [
      "./src/index.ts",
      "./src/react/index.tsx",
      "./src/vue/index.tsx",
      "./src/types.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  }
}
